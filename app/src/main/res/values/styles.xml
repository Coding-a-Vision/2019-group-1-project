<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">@color/colorMainText</item>
    </style>

    <style name="Toolbar.ActionBarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/lato</item>
    </style>

    <style name="attempt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dim1</item>
        <item name="android:layout_marginTop">@dimen/dim1</item>
        <item name="android:layout_marginEnd">@dimen/dim1</item>
        <item name="android:layout_marginBottom">@dimen/dim1</item>
        <item name="android:paddingStart">@dimen/dim1</item>
        <item name="android:paddingTop">@dimen/dim1</item>
        <item name="android:paddingEnd">@dimen/dim1</item>
        <item name="android:paddingBottom">@dimen/dim1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>
